{
  "name": "flowcrypt-mobile-core",
  "version": "0.0.1",
  "description": "Node.js bundle for FlowCrypt Android internal use.",
  "dependencies": {
    "openpgp": "4.4.1",
    "sanitize-html": "1.20.1"
  },
  "devDependencies": {
    "@babel/core": "7.1.6",
    "@types/chai": "4.1.4",
    "@types/chrome": "0.0.65",
    "ava": "1.0.0-beta.4",
    "babel-loader": "8.0.4",
    "babel-preset-env": "1.7.0",
    "chai": "4.1.2",
    "node-cleanup": "2.1.2",
    "pg": "7.4.3",
    "request": "2.88.0",
    "tslint": "5.11.0",
    "typescript": "3.4.1",
    "webpack": "4.26.1",
    "webpack-cli": "3.1.2",
    "webpack-node-externals": "1.7.2"
  },
  "scripts": {
    "prebuild": "rm -rf build/ts build/final/* && mkdir -p build/final",
    "_buildTs": "cd .. && ./TypeScript/node_modules/typescript/bin/tsc --project tsconfig.json",
    "_buildBundles": "webpack --config webpack.config.js && node tooling/fix-bundles.js",
    "_buildFinalWip": "cat build/bundles/html-sanitize-bundle.js build/bundles/emailjs-bundle.js build/bundles/openpgp-bundle.js build/bundles/flowcrypt-bundle.js > build/final/flowcrypt-android-wip.js",
    "_buildFinal": "node tooling/build-final.js",
    "build": "npm run-script _buildTs && npm run-script _buildBundles && npm run-script _buildFinalWip && npm run-script _buildFinal",
    "predeploy": "npm run-script build",
    "deploy": "cp build/final/flowcrypt-android-prod.js ../FlowCrypt/src/main/assets/js/flowcrypt-android.js && cp build/final/flowcrypt-android-prod.js ../../flowcrypt-android/FlowCrypt/src/main/assets/js/flowcrypt-android.js",
    "pretest": "npm run-script build",
    "test": "ava build/ts/flowcrypt-mobile-core/TypeScript/source/test.js --verbose",
    "pregenCompatAssets": "npm run-script build",
    "genCompatAssets": "ava build/ts/flowcrypt-mobile-core/TypeScript/source/gen-compat-assets.js --verbose",
    "preupdateCore": "rm -rf source/core source/lib",
    "updateCore": "npm run-script _updateCoreLib && npm run-script _updateCoreSrc",
    "_updateCoreSrc": "cp -r ../../flowcrypt-browser/extension/js/common/core source/core",
    "_updateCoreLib": "mkdir source/lib && cd source/lib && LIBD='../../../../flowcrypt-browser/extension/lib' && cp -r $LIBD/emailjs . && cp $LIBD/openpgp.js . && cp $LIBD/iso-*.js . && cp $LIBD/zxcvbn.js .",
    "donateCore": "rm -rf ../../flowcrypt-browser/extension/js/common/core && cp -r source/core ../../flowcrypt-browser/extension/js/common/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlowCrypt/flowcrypt-mobile-core.git"
  },
  "author": "FlowCrypt Limited",
  "license": "SEE LICENSE IN <LICENSE>",
  "private": true,
  "bugs": {
    "url": "https://github.com/FlowCrypt/flowcrypt-mobile-core/issues"
  },
  "homepage": "https://flowcrypt.com"
}
